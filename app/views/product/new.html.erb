<h1>Add Product</h1>
<div style="width:800px;">
  <form  accept-charset="UTF-8" action ="/product_new" method="POST">
  <div class="form-group">
    <input type="hidden" name="product_id" class="form-control" id="product_id" value="1" style="width:200px;">
  </div>
    <div class="form-group">
      <label for="exampleInputEmail1">Title</label>
      <input type="text" name="title" class="form-control" id="title" placeholder="Enter Title" style="width:200px;" required>
    </div>
    <div class="form-group">
      <label for="exampleInputEmail1">Price (RM)</label>
      <input type="text" name="price" class="form-control" id="price" placeholder="Enter price" style="width:200px;" required>
    </div>

    <div class="form-group">
      <label for="exampleInputEmail1">Duration (mins)</label>
      <input type="text" name="duration" class="form-control" id="duration" placeholder="Enter Duration" style="width:200px;" required>
    </div>

    <div class="form-group">
      <label for="exampleInputEmail1">Description</label>
      <input type="text" name="description" class="form-control" id="description" placeholder="Enter Description" style="width:200px;" required>
    </div>

    <button type="submit" class="btn btn-primary">Add Product</button>
  </form>
</div>
<%= link_to "Home" , home_path %>



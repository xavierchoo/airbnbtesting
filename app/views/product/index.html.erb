<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.css">

<div class="sidenav">
  <a href="/product">Product List</a>
  <a href="/product_new">Add Product</a>
</div>

<div class="main">

	<table id="table_id" class="display">
	    <thead>
	        <tr>
	            <th>Title</th>
	            <th>Price</th>
	            <th>Description</th>
	            <th>Duration(Mins)</th>
	            <th>Updated At</th>
	            <th>Created At</th>
	        </tr>
	    </thead>
	    <tbody>
	        <% @products.each do |p| %>
	        <tr>
	           <td><%= p.title %></td>
	           <td><%= p.price %></td>
	           <td><%= p.description %></td>
	           <td><%= p.duration %></td>
	           <td><%= p.updated_at %></td>
	           <td><%= p.created_at %></td>
	        </tr>
	        <% end %>
	    </tbody>
	</table> 
</div>


<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.js"></script>
<script>
$(document).ready( function () {
    $('#table_id').DataTable();
} );
</script>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.css">

<div class="sidenav">
  <a href="/appointment">Appointment List</a>
  <a href="/appointment_new">Add appointment</a>
</div>

<div class="main">

	<table id="table_id" class="display">
	    <thead>
	        <tr>
	            <th>name</th>
	            <th>email</th>
	            <th>phone</th>
	            <th>product id</th>
	            <th>Updated At</th>
	            <th>Created At</th>
	        </tr>
	    </thead>
	    <tbody>
	        <% @appointments.each do |p| %>
	        <tr>
	           <td><%= p.name %></td>
	           <td><%= p.email %></td>
	           <td><%= p.phone %></td>
	           <td><%= p.product_id %></td>
	           <td><%= p.updated_at %></td>
	           <td><%= p.created_at %></td>
	        </tr>
	        <% end %>
	    </tbody>
	</table> 
</div>


<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.js"></script>
<script>
$(document).ready( function () {
    $('#table_id').DataTable();
} );
</script>
<h1>Add Product</h1>
<div style="width:800px;">
  <form  accept-charset="UTF-8" action ="/appointment_new" method="POST">

    <div class="form-group">
      <label for="exampleInputEmail1">Name</label>
      <input type="text" name="name" class="form-control" id="title" placeholder="Enter Title" style="width:200px;" required>
    </div>
    <div class="form-group">
      <label for="exampleInputEmail1">Email</label>
      <input type="text" name="email" class="form-control" id="price" placeholder="Enter price" style="width:200px;" required>
    </div>

    <div class="form-group">
      <label for="exampleInputEmail1">Phone</label>
      <input type="text" name="phone" class="form-control" id="duration" placeholder="Enter Duration" style="width:200px;" required>
    </div>

    <div class="form-group">
      <label for="exampleInputEmail1">Product Id</label>
      <input type="text" name="product_id" class="form-control" id="description" placeholder="Enter Description" style="width:200px;" required>
    </div>

    <button type="submit" class="btn btn-primary">Add Appointment</button>
  </form>
</div>
<%= link_to "Home" , home_path %>


